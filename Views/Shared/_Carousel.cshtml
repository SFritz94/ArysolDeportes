@using ArysolDeportes_SantiagoFritz.Models;
@model Producto

@functions{
    string MostrarImagenes(List<Imagen> imagenes){
        @foreach (var imgRuta in imagenes)
        {
            @if(ViewBag.carouselDetalle==1){
                <div class="carousel-item @(imgRuta == imagenes.First() ? "active" : "")">
                    <img src='@Url.Content("~/imagenes/" + @imgRuta.contenido)' class="d-block w-100  imagenDetalle" alt="">
                </div> 
            }else{
                <div class="carousel-item @(imgRuta == imagenes.First() ? "active" : "")">
                    <img src='@Url.Content("~/imagenes/" + @imgRuta.contenido)' class="d-block w-100  imagenCard" alt="">
                </div>  
            }        
        }
        return string.Empty;
    }
}

<div class="carousel slide" data-ride="carousel" data-interval="5000">
    <div class="carousel-inner">
        @MostrarImagenes(Model.imagenes)
    </div>
</div>
