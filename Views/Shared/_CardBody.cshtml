@using ArysolDeportes_SantiagoFritz.Models;
@model Producto

<div class="card-body centrarTextoCards">
    <div>
        <h5 class="card-title">@Model.nombre</h5>
        <p class="card-text">@Model.descripcion</p>
        <p class="card-text">$@Model.precio</p>
        <p class="card-text">@Model.categoria.nombreCategoria</p>
        @if(@ViewBag.AltaProdElim != "prodElim"){
            @Html.ActionLink("Ver mas de cerca","DetalleProducto", new {id = Model.id, campoOrden = @ViewBag.orden, campoBusqueda = @ViewBag.busqueda, pagina = @ViewBag.pagina})
        }else{
            @Html.ActionLink("Alta producto","Editar", new {id = Model.id, campoOrden = @ViewBag.orden, campoBusqueda = @ViewBag.busqueda, prodElim = @ViewBag.AltaProdElim, pagina = @ViewBag.pagina})
        }
    </div>
</div>